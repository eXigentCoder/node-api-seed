{
    "$id": "https://raw.githubusercontent.com/eXigentCoder/node-api-seed/master/src/routes/users/user.json",
    "name": "user",
    "description": "A user of the site",
    "type": "object",
    "identifierName": "email",
    "statuses": [
        {
            "name": "active",
            "description": "Default status, shows that the user is active and can login"
        },
        {
            "name": "inactive",
            "description": "Shows that the user is inactive and can't login"
        },
        {
            "name": "testStatus",
            "description": "Some other status to be used for testing"
        }
    ],
    "updateStatusSchema": {
        "type": "object",
        "properties": {
            "reason": {
                "type": "string",
                "minLength": 1
            }
        },
        "required": [
            "reason"
        ],
        "additionalProperties": true
    },
    "properties": {
        "email": {
            "type": "string",
            "format": "email",
            "minLength": 1,
            "faker": "internet.email"
        },
        "firstName": {
            "type": "string",
            "minLength": 1,
            "faker": "name.firstName"
        },
        "surname": {
            "type": "string",
            "minLength": 1,
            "faker": "name.lastName"
        }
    },
    "additionalProperties": false,
    "trackHistory": true,
    "required": [
        "email",
        "firstName",
        "surname"
    ],
    "indexes": [
        {
            "name": "email",
            "unique": true,
            "background": true,
            "includeInHistory": true,
            "fields": {
                "email": 1
            }
        }
    ]
}
